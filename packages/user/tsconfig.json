{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "es7",
      "es6",
      "esnext",
      "es2015",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}